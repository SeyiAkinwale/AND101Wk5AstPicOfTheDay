<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/astronomyPhoto"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/placeholder"/>

    <Button
        android:id="@+id/getPhotoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="Get the Astronomy Picture of the Day"
        app:layout_constraintEnd_toEndOf="@+id/astronomyPhoto"
        app:layout_constraintStart_toStartOf="@+id/astronomyPhoto"
        app:layout_constraintTop_toBottomOf="@+id/astronomyPhoto" />

</androidx.constraintlayout.widget.ConstraintLayout>